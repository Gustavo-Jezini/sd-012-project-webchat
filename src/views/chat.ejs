<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web Chat</title>
</head>
<body>
  <div id="room-container">
    <div id="user-container">
      <form action="">
        <input data-testid="nickname-box" type="text" placeholder="Insira seu nickname">
        <button data-testid="nickname-button" type="button">Salvar</button>
      </form>
      <ul id="user-list">
        <li id="user" data-testid="online-user"></li>
      </ul>
    </div>
    <div id="messages-container">
      <ul id="message-list">
        <% messages.forEach(({ message, nickname, timestamp }) => { %>
          <li data-testid="message"><%= `${timestamp} - ${nickname} ${message}` %></li>
        <% }) %>
      </ul>
    </div>
    </div>
  <form id="message-container">
    <input data-testid="message-box" placeholder="Digite uma nova mensagem aqui"></input>
    <button data-testid="send-button" type="button">Enviar</button>
  </form>
  <script src="/socket.io/socket.io.js"></script>
  <script src="../assets/chat.js"></script>
</body>
</html>