<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat</title>
</head>
<body>
  <h3>Chat</h3>
  <div>
    <section>
      <div>
        <label>
          <span data-testid="online-user" class="online-user"></span>
          <input type="text" data-testid="nickname-box" class="nickname-box" placeholder="Nickname..." />

          <button data-testid="nickname-button" class="nickname-button">Salvar</button>
        </label>
      </div>
      <ul class="users"></ul>
    </section>
    <ul class="messages">
      <% messages.map((msg) => {
        const { timestamp, message, nickname } = msg;
      %>
        <li data-testid="message">
          <%= `${timestamp} - ${nickname}: ${message}` %>
        </li>
      <% }) %>
    </ul>
    <div class="form-message">
      <label>
        <input type="text" class="message-box" data-testid="message-box" placeholder="Mensagem..." />

        <button data-testid="send-button" class="send-button">Enviar</button>
      </label>
    </div>
  </div>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src='./chat.js'></script>
</html>