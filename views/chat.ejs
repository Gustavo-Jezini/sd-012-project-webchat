<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Web Chat</title>
</head>
<body>

  <div>
    <input type="text" placeholder="Change nickName" data-testid="nickname-box" id="nickname-box" />
    <button type="button" data-testid="nickname-button" id="nickname-button">Mudar</button>
  </div>

 <div> 
   <p>Lista de nicks</p>
  <ul id="nicksList"></ul>
 </div>

<div>
  <h2>Mensagens</h2>
  <ul id="messages">
    <% history.forEach((hist) => { %>
      <li data-testid="message">
        <%= `${hist.timeStamp} - ${hist.nickname}: ${hist.chatMessage}`%>
      </li>
     <% }) %>
  </ul>
</div>

    <form>
      <input type="text" data-testid="message-box" placeholder="Digite sua mensagem" id="message-box" />
      <button type="button" data-testid="send-button" id="send-button" >Send</button>
    </form>

  <script src="/socket.io/socket.io.js"></script>
  <script src="./js/chat.js"></script>
</body>
</html>