<!DOCTYPE html>
<html>
    <header>
        <title>Web Chat</title>
    </header>
    <body>
        <div id="painel">
            <form id="formNickname" action="">
                <input
                    data-testid="online-user"
                    id="inputNickname"
                    autocomplete="off"
                    placeholder="Insira seu nickname"
                >
                <button>Salvar</button>
            </form>
            <ul id="users"></ul>
        </div>

        <ul id="messages"></ul>

        <form id="formMessage" action="">
            <input
                id="inputMessage"
                autocomplete="off"
                placeholder="Digite uma nova mensagem"
            >
            <button>Enviar</button>
        </form>

        <script src="/socket.io/socket.io.js"></script>
        <script src="./js/chat.js"></script>
    </body>
</html>