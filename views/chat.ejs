<!DOCTYPE html>
<html>
  <head>
    <title>CHAT</title>
    <link rel="stylesheet" href="./css/chat.css">
  </head>
  <body>
    <div class="content">
      <div class="nickname-field">
        <form id="nickname-form">
          <input id="nickname-input" data-testid="nickname-box" placeholder="Change nickname" />
          <button data-testid="nickname-button">Save</button>
        </form>
        <ul id="nicknames"></ul>
      </div>
      <ul id="messages" class="messages">
        <% history.forEach((entry) => { %>
          <li data-testid="message">
            <%=entry.timestamp%> - <%=entry.nickname%>: <%=entry.message%>
          </li>
        <% }) %>
      </ul>
      <form id="message-form" class="message-form">
        <input id="message-input" class="message-input" data-testid="message-box" />
        <button class="send-button" data-testid="send-button">Send</button>
      </form>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/chat.js"></script>
  </body>
</html>