<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../css/chat.css">
  <title>WebChat</title>
</head>
<body>
  <div class="main-div">
    <section class="section-nickname-messages">
      <div class="div-nickname">
        <form id="nickNameForm" action="">
          <h2 name="nickname" id="nickNamePlace"></h2>
          <label for="nickNameInput"> Nickname: </label>
          <input type="text" id="nickNameInput" data-testid="nickname-box"/>
          <button data-testid="nickname-button">Salve</button>
        </form>

        <div id="recoverNickname" class="recoverNickname">
          <h3>Recover this nickname:</h3>
          <input type="button" value="There isn't yet" id="recover-nickname-button"></button>
        </div>
      </div>
      
      <div class="messages-send-button">
        <ul id="messages">
          <% messages.forEach(({ timestamp, nickname, message}) => { %>
            
            <li data-testid="message"> <%= `${timestamp} - ${nickname}: ${message}` %> </li>
          
          <% }) %>
        </ul>
          
        <form id="form-send-messages" class="form-send-messages">
          
          <input name="chatMessage" data-testid="message-box" id="messageInput" class="messageInput" autocomplete="off" />
          
          <button data-testid="send-button" class="send-button">Send</button>
          
        </form>
      </div>
    </section>
    
    <section class="section-conected-users">
      <div class="div-conected-users">
        <h3>Usu√°rios conectados</h3>
        <ul id="connected-user" class="ul-conected-users"></ul>
      </div>
    </section>

  </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="../js/chat.js"></script>
  </body>
</html>