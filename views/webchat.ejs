<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Webchat</title>
</head>
<body>
  <form id="nickname-form">
    <input
      type="text"
      placeholder="Insira seu nickname"
      id="nickname-input"
      data-testid="nickname-box"
    />
    <button
      type="submit"
      id="nickname-button"
      data-testid="nickname-button"
    >
      Salvar
    </button>
  </form>

  <ul
    id="nickname-list"
  ></ul>

  <ul
    id="message-list"
  >
    <% messages.forEach(({ timestamp, nickname, message }) => { %>
      <li class="message" data-testid="message"><%= `${timestamp} - ${nickname}: ${message}` %>  </li>
    <% }); %>
  </ul>

  <form id="message-form">
    <input
      type="text"
      placeholder="Digite uma nova mensagem aqui"
      id="message-input"
      data-testid="message-box"
    />
    <button
      type="submit"
      id="send-button"
      data-testid="send-button"
    >
      Enviar
    </button>
  </form>
</body>
<script src="/socket.io/socket.io.js"></script>
<script src="../client.js" type="text/javascript"></script>
</html>