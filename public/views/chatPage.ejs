          <input id="nickname" type="text" data-testid="online-user" placeholder="Insira seu nickname">
          <button type="button">Salvar</button>
        </div>
        <div class="users">

        </div>
      </section>
      <section class="chat">
        
      </section>
    </section>
    <form class="send-message">
      <input type="text" data-testid="message-box" placeholder="Digite uma nova mensagem aqui">
      <button id="send" type="submit" data-testid="send-button">Enviar</button>
    </form>
  </main>

